<?xml version="1.0" encoding="UTF-8"?>
<project name="combat_game" default="all">
  
  
  <property file="CombatGame.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.zip"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
    <include name="*.klib"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.openjdk-14" value="${jdk.home.openjdk-14}/bin"/>
  <path id="jdk.classpath.openjdk-14">
    <fileset dir="${jdk.home.openjdk-14}">
      <include name="../openjdk-14!/java.base"/>
      <include name="../openjdk-14!/java.compiler"/>
      <include name="../openjdk-14!/java.datatransfer"/>
      <include name="../openjdk-14!/java.desktop"/>
      <include name="../openjdk-14!/java.instrument"/>
      <include name="../openjdk-14!/java.logging"/>
      <include name="../openjdk-14!/java.management"/>
      <include name="../openjdk-14!/java.management.rmi"/>
      <include name="../openjdk-14!/java.naming"/>
      <include name="../openjdk-14!/java.net.http"/>
      <include name="../openjdk-14!/java.prefs"/>
      <include name="../openjdk-14!/java.rmi"/>
      <include name="../openjdk-14!/java.scripting"/>
      <include name="../openjdk-14!/java.se"/>
      <include name="../openjdk-14!/java.security.jgss"/>
      <include name="../openjdk-14!/java.security.sasl"/>
      <include name="../openjdk-14!/java.smartcardio"/>
      <include name="../openjdk-14!/java.sql"/>
      <include name="../openjdk-14!/java.sql.rowset"/>
      <include name="../openjdk-14!/java.transaction.xa"/>
      <include name="../openjdk-14!/java.xml"/>
      <include name="../openjdk-14!/java.xml.crypto"/>
      <include name="../openjdk-14!/jdk.accessibility"/>
      <include name="../openjdk-14!/jdk.aot"/>
      <include name="../openjdk-14!/jdk.attach"/>
      <include name="../openjdk-14!/jdk.charsets"/>
      <include name="../openjdk-14!/jdk.compiler"/>
      <include name="../openjdk-14!/jdk.crypto.cryptoki"/>
      <include name="../openjdk-14!/jdk.crypto.ec"/>
      <include name="../openjdk-14!/jdk.crypto.mscapi"/>
      <include name="../openjdk-14!/jdk.dynalink"/>
      <include name="../openjdk-14!/jdk.editpad"/>
      <include name="../openjdk-14!/jdk.hotspot.agent"/>
      <include name="../openjdk-14!/jdk.httpserver"/>
      <include name="../openjdk-14!/jdk.incubator.foreign"/>
      <include name="../openjdk-14!/jdk.incubator.jpackage"/>
      <include name="../openjdk-14!/jdk.internal.ed"/>
      <include name="../openjdk-14!/jdk.internal.jvmstat"/>
      <include name="../openjdk-14!/jdk.internal.le"/>
      <include name="../openjdk-14!/jdk.internal.opt"/>
      <include name="../openjdk-14!/jdk.internal.vm.ci"/>
      <include name="../openjdk-14!/jdk.internal.vm.compiler"/>
      <include name="../openjdk-14!/jdk.internal.vm.compiler.management"/>
      <include name="../openjdk-14!/jdk.jartool"/>
      <include name="../openjdk-14!/jdk.javadoc"/>
      <include name="../openjdk-14!/jdk.jcmd"/>
      <include name="../openjdk-14!/jdk.jconsole"/>
      <include name="../openjdk-14!/jdk.jdeps"/>
      <include name="../openjdk-14!/jdk.jdi"/>
      <include name="../openjdk-14!/jdk.jdwp.agent"/>
      <include name="../openjdk-14!/jdk.jfr"/>
      <include name="../openjdk-14!/jdk.jlink"/>
      <include name="../openjdk-14!/jdk.jshell"/>
      <include name="../openjdk-14!/jdk.jsobject"/>
      <include name="../openjdk-14!/jdk.jstatd"/>
      <include name="../openjdk-14!/jdk.localedata"/>
      <include name="../openjdk-14!/jdk.management"/>
      <include name="../openjdk-14!/jdk.management.agent"/>
      <include name="../openjdk-14!/jdk.management.jfr"/>
      <include name="../openjdk-14!/jdk.naming.dns"/>
      <include name="../openjdk-14!/jdk.naming.rmi"/>
      <include name="../openjdk-14!/jdk.net"/>
      <include name="../openjdk-14!/jdk.nio.mapmode"/>
      <include name="../openjdk-14!/jdk.rmic"/>
      <include name="../openjdk-14!/jdk.scripting.nashorn"/>
      <include name="../openjdk-14!/jdk.scripting.nashorn.shell"/>
      <include name="../openjdk-14!/jdk.sctp"/>
      <include name="../openjdk-14!/jdk.security.auth"/>
      <include name="../openjdk-14!/jdk.security.jgss"/>
      <include name="../openjdk-14!/jdk.unsupported"/>
      <include name="../openjdk-14!/jdk.unsupported.desktop"/>
      <include name="../openjdk-14!/jdk.xml.dom"/>
      <include name="../openjdk-14!/jdk.zipfs"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.openjdk-14}"/>
  <property name="project.jdk.bin" value="${jdk.bin.openjdk-14}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.openjdk-14"/>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module CombatGame -->
  
  <dirname property="module.combatgame.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.combatgame" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.combatgame" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.combatgame" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.combatgame" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="combatgame.output.dir" value="${module.combatgame.basedir}/out/production/CombatGame"/>
  <property name="combatgame.testoutput.dir" value="${module.combatgame.basedir}/out/test/CombatGame"/>
  
  <path id="combatgame.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="combatgame.module.production.classpath">
    <path refid="${module.jdk.classpath.combatgame}"/>
  </path>
  
  <path id="combatgame.runtime.production.module.classpath">
    <pathelement location="${combatgame.output.dir}"/>
  </path>
  
  <path id="combatgame.module.classpath">
    <path refid="${module.jdk.classpath.combatgame}"/>
    <pathelement location="${combatgame.output.dir}"/>
  </path>
  
  <path id="combatgame.runtime.module.classpath">
    <pathelement location="${combatgame.testoutput.dir}"/>
    <pathelement location="${combatgame.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.combatgame">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.combatgame">
    <patternset refid="excluded.from.module.combatgame"/>
  </patternset>
  
  <path id="combatgame.module.sourcepath">
    <dirset dir="${module.combatgame.basedir}">
      <include name="src"/>
      <include name="resources"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.combatgame" depends="compile.module.combatgame.production,compile.module.combatgame.tests" description="Compile module CombatGame"/>
  
  <target name="compile.module.combatgame.production" depends="register.custom.compilers" description="Compile module CombatGame; production classes">
    <mkdir dir="${combatgame.output.dir}"/>
    <javac2 destdir="${combatgame.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.combatgame}/javac">
      <compilerarg line="${compiler.args.combatgame}"/>
      <bootclasspath refid="combatgame.module.bootclasspath"/>
      <classpath refid="combatgame.module.production.classpath"/>
      <src refid="combatgame.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.combatgame"/>
    </javac2>
    
    <copy todir="${combatgame.output.dir}">
      <fileset dir="${module.combatgame.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.combatgame.basedir}/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.combatgame.tests" depends="register.custom.compilers,compile.module.combatgame.production" description="compile module CombatGame; test classes" unless="skip.tests"/>
  
  <target name="clean.module.combatgame" description="cleanup module">
    <delete dir="${combatgame.output.dir}"/>
    <delete dir="${combatgame.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.combatgame" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.combatgame" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.combatgame:jar" value="${basedir}"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.CombatGame.jar" value="${artifacts.temp.dir}/CombatGame.jar"/>
  </target>
  
  <target name="artifact.combatgame:jar" depends="init.artifacts, compile.module.combatgame" description="Build &#39;CombatGame:jar&#39; artifact">
    <property name="artifact.temp.output.combatgame:jar" value="${artifacts.temp.dir}/CombatGame_jar"/>
    <mkdir dir="${artifact.temp.output.combatgame:jar}"/>
    <jar destfile="${temp.jar.path.CombatGame.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${combatgame.output.dir}"/>
    </jar>
    <copy file="${temp.jar.path.CombatGame.jar}" tofile="${artifact.temp.output.combatgame:jar}/CombatGame.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.combatgame:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.combatgame:jar}"/>
    <copy todir="${artifact.output.combatgame:jar}">
      <fileset dir="${artifact.temp.output.combatgame:jar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>